- tab :submissions => "submissions"

- sidebar do
  .buttons
    = link_to icon('publish.png') + " Form Designer", edit_form_path(@form), :class => "primary"
  
  /%p.export-csv
  /  = link_to "Export Results as CSV", "#"#, forms_form_submissions_path(@form, :format => :csv)
  
  %hr

  - if last_submission = @form.submissions.first
    %p.owner Last submission: #{timestamp(last_submission.created_at)}
  
  = owner
  
  %hr

- content_for(:head) do
  = stylesheet_link_tag "wheelhouse-forms/admin"
